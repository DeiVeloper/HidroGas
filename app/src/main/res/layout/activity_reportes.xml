<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TableLayout
        android:id="@+id/titulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:collapseColumns="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:background="@color/PrimaryColor">

            <TextView
                android:layout_column="0"
                android:text="Busqueda de Unidades con Alertas"
                android:textSize="20dp"
                android:layout_span="3"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@android:color/white" />
        </TableRow>
        <TableRow >

            <Button
                android:id="@+id/btnFechaBusqueda"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textAlignment="center"
                android:layout_column="0"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:id="@+id/labelFechaBusqueda" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_column="2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:layout_toRightOf="@+id/editFechaBusqueda"/>

        </TableRow>
        <TableRow android:background="@color/PrimaryColor">

            <TextView
                android:id="@+id/listado"
                android:layout_column="0"
                android:text="Listado de Pipas"
                android:layout_span="3"
                android:textAlignment="center"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:textColor="@android:color/white" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnExportarExcel"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text="Exportar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnExportarExcel"
        android:layout_below="@+id/titulo" />

</RelativeLayout>
