<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <Button
        android:id="@+id/btnExportar"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:text="Exportar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        android:id="@+id/titulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,"
        android:collapseColumns="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:background="@color/PrimaryColor">

            <TextView
                android:layout_column="0"
                android:text="Busqueda de Unidades"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:textColor="@android:color/white" />
        </TableRow>
        <TableRow >

            <TextView
                android:id="@+id/fechaBusqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de BÃºsqueda: "
                android:textAlignment="center"
                android:layout_column="0"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_column="1"
                android:ems="10"
                android:hint="13/01/1991"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:id="@+id/editFechaBusqueda" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_column="2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:layout_toRightOf="@+id/editFechaBusqueda"/>

        </TableRow>
        <TableRow android:background="@color/PrimaryColor">

            <TextView
                android:id="@+id/listado"
                android:layout_column="0"
                android:text="Listado de Pipas"
                android:layout_gravity="left"
                android:textSize="20dp"
                android:textColor="@android:color/white" />
        </TableRow>+

    </TableLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btnExportar" />

</RelativeLayout>