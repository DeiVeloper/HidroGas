<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="Llenado de Pipas" android:layout_width="wrap_content"
            android:layout_gravity="center|top" android:layout_height="wrap_content"
            android:id="@+id/lblTitulo" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:textSize="28sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TableLayout
            android:layout_below="@+id/tblListaPipas" android:layout_marginTop="35dp"
            android:layout_marginBottom="55dp" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:id="@+id/hdrListaPipas" android:background="#dcdcdc"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/clnEconomico" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:text="Económico" android:gravity="center"
                    android:textColor="#000" android:textSize="23sp" />
                <TextView
                    android:id="@+id/clnNombreChofer" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:layout_weight="1" android:gravity="center"
                    android:text="Chofer" android:textColor="#000"
                    android:textSize="23sp" />
                <TextView
                    android:id="@+id/clnFechaLiquidacion" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:text="Liquidación" android:gravity="center"
                    android:textColor="#000" android:textSize="23sp" />
                <TextView
                    android:id="@+id/clnLlenar" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:text="Llenar" android:gravity="center"
                    android:textColor="#000" android:textSize="23sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/clnEconomico1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:text="01" android:gravity="center"
                    android:textColor="#000" android:textSize="20sp" />
                <TextView
                    android:id="@+id/clnNombreChofer1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:layout_weight="1" android:text="Juan Pérez Guzmán"
                    android:gravity="center" android:textColor="#000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/clnFechaLiquidacion1" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:padding="15px"
                    android:text="23/11/2016" android:gravity="center"
                    android:textColor="#000" android:textSize="20sp" />
                <Button android:id="@+id/btnLlenar" android:background="#A09F9F"
                    android:layout_width="fill_parent" android:text="Llenar"
                    android:textColor="#000" android:textSize="18sp"
                    android:layout_margin="2dp"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnRegresar" android:text="Regresar"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right|bottom" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" />

    </FrameLayout>

</RelativeLayout>
