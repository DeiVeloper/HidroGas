<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tablaPersonal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,1"
        android:collapseColumns="50dp">

        <TableRow android:background="@color/ColorPrimary">
            <TextView
                android:layout_column="0"
                android:text="Filtros de Búsqueda"
                android:textSize="35dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_span="3"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow >
            <EditText
                android:id="@+id/txtFolioLiquidacionBusqueda" android:textSize="30dp"
                android:layout_width="100dp" android:layout_height="wrap_content"
                android:hint="Folio Liquidación" android:inputType="number"/>
            <Button
                android:id="@+id/btnFechaBusqueda"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:text="Fecha"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_column="0"
                android:background="#04b1f5"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:id="@+id/labelFechaBusqueda" />

            <Button
                android:text="Buscar" android:layout_width="200dp"
                android:layout_height="wrap_content" android:layout_gravity="right"
                android:id="@+id/btnBuscar" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp" android:textSize="30dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblFolio"
                android:text="Folio" android:textSize="30dp"/>
            <TextView
                android:id="@+id/lblFecha" android:layout_width="350dp"
                android:text="Fecha" android:textSize="30dp"
                />
            <TextView
                android:id="@+id/lblPipa"
                android:text="Pipa" android:textSize="30dp"/>

        </TableRow>
        <TableRow>
            <ListView
                android:id="@+id/lstLiquidaciones"
                android:layout_width="fill_parent"
                android:layout_height="450dp"
                android:layout_span="3" >
            </ListView>
        </TableRow>
    </TableLayout>


</RelativeLayout>
