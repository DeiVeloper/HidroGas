    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tabla_Datos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,1,2,3,4,"
        android:collapseColumns="50dp">

        <TableRow android:background="@color/PrimaryColor">
            <TextView
                android:layout_column="0"
                android:text="Datos Generales"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_span="2"
                android:textColor="@android:color/white" />
        </TableRow>
        <TableRow>
            <!--<TextView
                android:id="@+id/label_ruta"
                android:layout_column="0"
                android:textAlignment="gravity"
                android:textSize="20dp"
                android:text="Ruta:"/>-->
            <Spinner
                android:id="@+id/spinner_ruta" />

            <EditText
                android:id="@+id/input_economico"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/spinner_ruta"
                android:hint="Economico"
                android:inputType="textPersonName" />
        </TableRow>
        <TableRow>


            <EditText
                android:id="@+id/input_chofer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No. Nomina Chofer"
                android:layout_alignTop="@+id/input_nombreChofer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:id="@+id/input_nombreChofer"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_height="40dp"/>

        </TableRow>

        <TableRow>


            <EditText
                android:id="@+id/input_ayudante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_chofer"
                android:ems="10"
                android:hint="No. Nomina Ayudante" />

            <TextView
                android:id="@+id/input_nombreAyudante"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="40dp"/>

        </TableRow>


    </TableLayout>


