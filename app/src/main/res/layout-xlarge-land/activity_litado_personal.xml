<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tablaPersonal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:collapseColumns="50dp">

        <TableRow android:background="@color/ColorPrimary">
            <TextView
                android:layout_column="0"
                android:text="Filtros de Búsqueda"
                android:textSize="35dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_span="3"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow >
            <EditText
                android:id="@+id/txtNoNomina"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="No. de Nómina"
                android:inputType="number"/>
            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textSize="30dp" />

            <Button
                android:text="Buscar" android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/btnBuscar"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:background="#dca951"
                android:textColor="@android:color/white"
                android:textSize="35dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblNomina"
                android:text="Nómina" android:textSize="30dp"/>
            <TextView
                android:id="@+id/lblNombre" android:layout_width="350dp"
                android:text="Nombre" android:textSize="30dp"
                />
            <TextView
                android:id="@+id/lblPipa"
                android:text="Pipa" android:textSize="30dp"/>

        </TableRow>
        <TableRow>
            <ListView
                android:id="@+id/lstPersonal"
                android:layout_width="fill_parent"
                android:layout_height="450dp"
                android:layout_span="3" >
            </ListView>
        </TableRow>
    </TableLayout>

    <Button
        android:text="Agregar" android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgregar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:background="#dca951"
        android:textColor="@android:color/white"
        android:textSize="35dp"/>

</RelativeLayout>