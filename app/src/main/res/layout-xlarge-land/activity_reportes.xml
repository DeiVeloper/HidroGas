<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TableLayout
        android:id="@+id/titulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow android:background="@color/ColorPrimary">

            <TextView
                android:layout_column="0"
                android:text="Busqueda de Unidades con Alertas"
                android:textSize="35dp"
                android:layout_span="5"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/textView6" />
        </TableRow>
        <TableRow >

            <ImageButton
                android:layout_width="50dp"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:layout_height="wrap_content"
                android:src="@drawable/calendario"
                android:id="@+id/btnFechaBusqueda" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:id="@+id/labelFechaBusqueda" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_column="2"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:background="#dca951"
                android:textColor="@android:color/white"
                android:textSize="40dp"/>

             <Button
                 android:id="@+id/btnExportarExcel"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Exportar"
                 android:layout_column="3"
                 android:layout_gravity="center"
                 android:background="#dca951"
                 android:textColor="@android:color/white"
                 android:textSize="35dp"
                 />

        </TableRow>
        <TableRow android:background="@color/ColorPrimary"
            android:id="@+id/listadoUnidadesAlerta">

            <TextView
                android:id="@+id/listado"
                android:layout_column="0"
                android:text="Listado de Pipas"
                android:layout_span="5"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="35dp"
                android:textColor="@android:color/white" />
        </TableRow>
        <TableRow android:background="@color/ColorPrimary">
            <TextView
                android:layout_column="0"
                android:text="No. Pipa"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_column="1"
                android:text="Fecha Registro"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_column="2"
                android:text="Variación"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_column="3"
                android:text="% Variación"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_column="1"
                android:text="Clave"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/listViewBusquedaVariacion"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titulo" />

</RelativeLayout>
